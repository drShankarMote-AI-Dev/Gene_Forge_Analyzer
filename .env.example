# ==========================================
# GENE FORGE ANALYZER - UNIFIED CONFIGURATION
# ==========================================

# --- APP CONFIG ---
VITE_APP_NAME="Gene Forge Analyzer"
SECRET_KEY=dev-secret-key-change-this-in-prod
JWT_SECRET_KEY=jwt-secret-key-change-this-in-prod

# --- DATABASE ---
# DATABASE_URL=postgresql://user:pass@localhost:5432/db # For Production
DATABASE_URL=sqlite:///geneforge.db

# --- ADMIN DEFAULTS ---
# These will be seeded on first run if no admin exists
ADMIN_EMAIL=admin@geneforge.com
ADMIN_PASSWORD=admin123

# --- NETWORKING ---
# Backend URL (Absolute for dev outside proxy, Relative for prod/proxied)
VITE_API_URL=/api
# Frontend URL for CORS and Google Redirects
FRONTEND_URL=https://gene-forge-analyzer.vercel.app
ALLOWED_ORIGINS=https://gene-forge-analyzer.vercel.app,http://localhost:8080

# --- PRODUCTION SECURITY ---
JWT_COOKIE_SECURE=True
JWT_COOKIE_SAMESITE=Lax
NODE_ENV=production

# --- IDENTITY (GOOGLE OAUTH) ---
# Create at: https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# --- EMAIL (SMTP) ---
# For Gmail: Use App Passwords (https://myaccount.google.com/apppasswords)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@geneforge.com

# --- AI INTERPRETATION ENGINE ---
# Primary: OpenAI (Get at https://platform.openai.com/)
OPENAI_API_KEY=your-openai-api-key
# Fallback: Google Gemini (Get at https://aistudio.google.com/)
GEMINI_API_KEY=your-gemini-api-key
